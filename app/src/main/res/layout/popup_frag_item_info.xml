<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_popup_info_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_building_blue_24dp" />

    <TextView
        android:id="@+id/tv_popup_info_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Title"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_popup_info_image"
        app:layout_constraintTop_toTopOf="@+id/iv_popup_info_image" />

    <TextView
        android:id="@+id/tv_popup_info_url"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="URL"
        app:layout_constraintEnd_toEndOf="@+id/tv_popup_info_title"
        app:layout_constraintStart_toStartOf="@+id/tv_popup_info_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_popup_info_title" />

    <Button
        android:id="@+id/btn_popup_info_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_popup_info_description"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:scrollbars="vertical"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/btn_popup_info_return"
        app:layout_constraintEnd_toEndOf="@+id/tv_popup_info_url"
        app:layout_constraintStart_toStartOf="@+id/iv_popup_info_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_popup_info_image" />
</android.support.constraint.ConstraintLayout>
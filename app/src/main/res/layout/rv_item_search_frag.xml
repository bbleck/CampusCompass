<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grayBlue"
  android:elevation="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/iv_search_item_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/item_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/tv_search_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_search_item_image"
        app:layout_constraintTop_toTopOf="@+id/iv_search_item_image"
        tools:text="Item Title" />

    <TextView
        android:id="@+id/tv_search_item_distance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/distance_away"
        android:textColor="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="@+id/tv_search_item_title"
        app:layout_constraintStart_toStartOf="@+id/tv_search_item_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_item_title" />

    <Button
        android:id="@+id/btn_search_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/info"
        app:layout_constraintEnd_toStartOf="@+id/btn_search_item_go"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_search_item_image"
        app:layout_constraintStart_toStartOf="@+id/tv_search_item_distance"
        app:layout_constraintTop_toTopOf="@+id/btn_search_item_go" />

    <Button
        android:id="@+id/btn_search_item_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/go_here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_search_item_info"
        app:layout_constraintTop_toBottomOf="@+id/tv_search_item_distance" />
</android.support.constraint.ConstraintLayout>